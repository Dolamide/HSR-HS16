#include <iostream>
#include <exception>

#include "sevensegment.h"
#include "calc.h"
#include "pocketcalculator.h"

void pocketcalculator(std::istream& in, std::ostream& out, unsigned const maxWidth){
	int scale{1};
	while(in){
		try{
			int result = calc(in);
			printLargeNumber(result, out, scale, maxWidth);
		}catch(std::logic_error const &e){
			printError(out, scale);
		}
	}
	out << "Bye\n";

}