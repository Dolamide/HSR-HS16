#include <iostream>
#include <string>
void askForName(std::ostream &out){
  out << "What is your name? ";
}
std::string inputName(std::istream &in){
  std::string name{};
  in >> name;
  return name;
}

void sayGreeting(std::ostream &out,std::string name, std::string second){
  out << "Hello " << name << ", how are you?\n";
  out << "Hello " << second << ", how are you?\n";
}

#include <iostream>

int main() {
    bool cond{};
    std::cout << cond ? "Hello" : "Peter";
}
