#include "counting.h"

#include <algorithm>
#include <iterator>

int chcount(std::istream &in, std::ostream &out){
	using it=std::istream_iterator<char>;
	return distance(it{in}, it{});

}

int chacount(std::istream &in, std::ostream &out){
	using it=std::istreambuf_iterator<char>;
	return distance(it{in}, it{});
}

int wcount(std::istream &in, std::ostream &out){
	using it=std::istreambuf_iterator<std::string>;
	return distance(it{in}, it{});

}
