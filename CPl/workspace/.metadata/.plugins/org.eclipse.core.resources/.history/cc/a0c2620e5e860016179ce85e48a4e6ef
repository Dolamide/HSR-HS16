#include "sstream"
#include "string"

int calc(int lhs, int rhs, char op) {
	switch (op) {
		case '+':
			return lhs + rhs;
		case '-':
			return lhs - rhs;
		case '*':
			return lhs * rhs;
		case '/':
			return lhs / rhs;
		case '%':
			return lhs % rhs;
		default:
			break;
	}
	return 0;
}

int calc(std::istream& in){
	int lhs{-1};
	char op {};
	int rhs{-1};
	if(in >> lhs >> op >> rhs){
		return calc(lhs,rhs, op);
	}

	// Ã¤quivalent zu:

	// in >> lhs
	// in >> op
	// in >> rhs


	return -1;
}