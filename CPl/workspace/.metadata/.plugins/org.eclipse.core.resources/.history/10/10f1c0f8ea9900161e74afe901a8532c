#include <iosfwd>
#include <string>
#include <iterator>
#include <vector>
#include <algorithm>
#include "wlist.h"
#include <iostream>

void wlist(std::istream & in){
	using input = std::istream_iterator<std::string>;
	input in_iterator{in};
	input eof{};
	std::vector<std::string> allwords { in_iterator, eof };

	std::transform(begin(allwords),end(allwords), begin(allwords),[](std::string c){
		std::transform(c.begin(), c.end(),c.begin(), ::tolower);
		return c;
	});

}

//std::string -> #include <string>
//std::cin -> #include <iostream>
//std::istream -> #include <iosfwd>
//istream_iterator -> #include <iterator>
//std::vector -> #include <vector>