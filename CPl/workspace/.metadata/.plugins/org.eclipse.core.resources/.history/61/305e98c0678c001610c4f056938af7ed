#include "counting.h"

#include <algorithm>
#include <iterator>
#include <iostream>

void chcount(std::istream &in, std::ostream &out){
	using it=std::istreambuf_iterator<char>;
//	for_each(it{in}, it{}, [](auto x){
//		std::cout << x << '\n';
//	});
	out << count(it{in}, it{}, ' ');

}

void chacount(std::istream &in, std::ostream &out){
using it=std::istreambuf_iterator<char>;
out << cout(it{in}, it{});
}