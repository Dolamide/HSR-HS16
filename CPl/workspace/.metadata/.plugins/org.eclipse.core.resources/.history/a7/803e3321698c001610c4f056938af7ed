#include "counting.h"

#include <algorithm>
#include <iterator>

void chcount(std::istream &in, std::ostream &out){
	using it=std::istream_iterator<char>;
	out << distance(it{in}, it{});

}

void chacount(std::istream &in, std::ostream &out){
	using it=std::istreambuf_iterator<char>;
	out << distance(it{in}, it{});
}

void wcount(std::istream &in, std::ostream &out){
	using it=std::istreambuf_iterator<char>;
	out << distance(it{in}, it{});

}
